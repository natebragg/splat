// 05_pinball.smudge
pinball
{
   * idle (@lockPaddles)
     [
          coin --> prepare-ball
     ],
     prepare-ball (@releaseBall, @resetScore, @unlockPaddles)
     [
          plunger --> run
     ],
     run (@startSound)
     [
          target -(@incScore)-,
          drain -(@sadSound)-> idle,
          tilt --> lockout
     ] (@displayScore),
     lockout(@displayError, @startTimer)
     [
          timerExpired --> idle,
          coin --,
          plunger --,
          target --,
          drain --,
          tilt --
     ] (@cancelTimer)
}
